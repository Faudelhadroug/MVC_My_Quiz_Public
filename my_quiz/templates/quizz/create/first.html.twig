{% extends 'base.html.twig' %}

{% block title %}Create your quizz{% endblock %}

{% block body %}
{% include 'header.html.twig'%}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="text-center"> 
    </div>
    <h1>Create a Quizz</h1>
    {{ form_start(CreateQuizzForm) }}
    {{ form_row(CreateQuizzForm.name) }}
    {{ form_row(CreateQuizzForm.choice) }}
        <button type="submit" class="btn btn-success">Start the creation of your quizz</button>
    {{ form_end(CreateQuizzForm) }}

</div>
{% endblock %}