{% extends 'base.html.twig' %}

{% block title %}Create your quizz{% endblock %}

{% block body %}
{% include 'header.html.twig'%}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="text-center"> 
    </div>
    <h1>Create a Quizz</h1>
    <h3> {{name}} </h3>
    {{ form_start(CreateQRForm) }}
    {{ form_row(CreateQRForm.question) }}
     {{ form_row(CreateQRForm.anwser) }}
      {{ form_row(CreateQRForm.anwser2) }}
       {{ form_row(CreateQRForm.anwser3) }}
        <button type="submit" class="btn btn-success">Next question</button>
    {{ form_end(CreateQRForm) }}

</div>
{% endblock %}