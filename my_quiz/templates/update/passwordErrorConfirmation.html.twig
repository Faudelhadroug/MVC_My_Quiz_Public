{% extends 'base.html.twig' %}

{% block title %}Update password{% endblock %}

{% block body %}
{% include 'header.html.twig'%}
    <h1>Update password</h1>

    {{ form_start(updatePasswordForm) }}
        {{ form_row(updatePasswordForm.plainPassword) }}
        <p class='text-danger'> Error, the password confirmation is different !</p>
        {{ form_row(updatePasswordForm.plainPasswordConfirmation) }}
        <button type="submit" class="btn btn-success">Update your Password</button>
    {{ form_end(updatePasswordForm) }}
{% endblock %}

